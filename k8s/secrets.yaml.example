# Example secrets file - DO NOT commit actual secrets!
# Create actual secrets with: kubectl create secret generic fame-secrets --from-env-file=.env -n fame

apiVersion: v1
kind: Secret
metadata:
  name: fame-secrets
  namespace: fame
type: Opaque
stringData:
  # Google AI (Gemini)
  GOOGLE_AI_KEY: "your_google_ai_key_here"
  
  # Financial Data APIs
  ALPHA_VANTAGE_API_KEY: "your_alpha_vantage_key_here"
  COINGECKO_API_KEY: "your_coingecko_key_here"
  FINNHUB_API_KEY: "your_finnhub_key_here"
  
  # Search & News APIs
  SERPAPI_KEY: "your_serpapi_key_here"
  SERPAPI_BACKUP_KEY: "your_serpapi_backup_key_here"
  NEWSAPI_KEY: "your_newsapi_key_here"
  GNEWS_API_KEY: "your_gnews_key_here"
  
  # GitHub API
  GITHUB_API_KEY: "your_github_api_key_here"
  
  # ElevenLabs (optional)
  ELEVENLABS_API_KEY: "your_elevenlabs_key_here"
  
  # Environment
  FAME_ENV: "production"
  FAME_LOG_AGGREGATION: "1"

